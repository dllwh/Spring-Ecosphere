			<pattern>%d{yyyy-MM-dd HHðŸ‡²ðŸ‡²ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
		</encoder>
		
		<!--æ—¥å¿—æ–‡ä»¶æœ€å¤§çš„å¤§å° -->
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
